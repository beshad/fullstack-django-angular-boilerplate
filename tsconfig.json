{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./client/",
    "paths": {
      "@app/*": [ "app/*"],
      "@auth/*": [ "app/auth/*"],
      "@base/*": [ "app/base/*"],
      "@user/*": [ "app/user/*"],
      "@admin/*": [ "app/admin/*"],
      "@assets/*": ["assets/*"]
    },
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "downlevelIteration": true,
    "experimentalDecorators": true,
    "module": "esnext",
    "moduleResolution": "node",
    "importHelpers": true,
    "target": "es2015",
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2018",
      "dom"
    ],
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true
  },
  "angularCompilerOptions": {
    "fullTemplateTypeCheck": true,
    "strictInjectionParameters": true
  }
}