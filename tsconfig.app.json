{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "outDir": "./out-tsc/app",
    "types": [],
    "baseUrl": "./client/",
    "paths": {
      "@app/*": [ "app/*"],
      "@auth/*": [ "app/auth/*"],
      "@base/*": [ "app/base/*"],
      "@user/*": [ "app/user/*"],
      "@admin/*": [ "app/admin/*"],
      "@assets/*": ["assets/*"],
      "@environments/*": ["./client/environments/*"]
    }
  },
  "files": [
    "client/main.ts",
    "client/polyfills.ts"
  ],
  "include": [
    "client/**/*.d.ts"
  ]
}
